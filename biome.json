{
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "files": {
    "includes": ["**", "!**/dist/**", "!**/node_modules/**", "!**/tsconfig*.json"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
